<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yso="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <com.xcode.lockcapture.userControl.tab.TabView
        android:id="@+id/main_tabView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        yso:text_size="12sp"
        yso:text_normal_color="@color/gray"
        yso:text_select_color="@color/green"
        yso:item_padding="7dp">

    </com.xcode.lockcapture.userControl.tab.TabView>

</LinearLayout>
